{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["ESNext", "dom", "dom.iterable", "scripthost"],
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "useDefineForClassFields": true
    },
    "include": ["vite.config.*", "src/**/*"]
}
